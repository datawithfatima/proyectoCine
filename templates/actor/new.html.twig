{% extends 'base.html.twig' %}

{% block title %}Crear Nuevo Actor{% endblock %}

{% block body %}

<!-- HEADER -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-0">
        <i class="bi bi-person-plus-fill text-primary me-2"></i> Crear Nuevo Actor
    </h2>
    <a href="{{ path('actor_index') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>

<!-- MENSAJES FLASH -->
{% for message in app.flashes('error') %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}

<!-- FORMULARIO -->
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                
                <form method="post" action="{{ path('actor_new') }}">
                    
                    <!-- Nombre -->
                    <div class="mb-3">
                        <label for="first_name" class="form-label">
                            <i class="bi bi-person"></i> Nombre 
                            <span class="text-danger">*</span>
                        </label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="first_name" 
                            name="first_name" 
                            placeholder="Ej: Tom"
                            required
                            maxlength="45"
                            autofocus
                        >
                    </div>

                    <!-- Apellido -->
                    <div class="mb-4">
                        <label for="last_name" class="form-label">
                            <i class="bi bi-person-badge"></i> Apellido 
                            <span class="text-danger">*</span>
                        </label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="last_name" 
                            name="last_name" 
                            placeholder="Ej: Hanks"
                            required
                            maxlength="45"
                        >
                    </div>

                    <!-- Botones -->
                    <div class="d-flex gap-2 justify-content-end">
                        <a href="{{ path('actor_index') }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Crear Actor
                        </button>
                    </div>

                </form>

            </div>
        </div>

        <!-- InformaciÃ³n adicional -->
        <div class="alert alert-info mt-3" role="alert">
            <i class="bi bi-info-circle"></i> 
            Los campos marcados con <span class="text-danger">*</span> son obligatorios.
        </div>
    </div>
</div>

{% endblock %}