{% extends 'base.html.twig' %}

{% block title %}Dashboard Tienda #{{ store.storeId }}{% endblock %}

{% block body %}
<div class="container mt-4">
    
    {# 1. CABECERA #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-primary mb-0">
                <i class="fas fa-store"></i> Tienda #{{ store.storeId }}
            </h1>
            <p class="text-muted lead mb-0">
                <i class="fas fa-map-marker-alt text-danger"></i> {{ store.address }}, {{ store.address }}
            </p>
        </div>
        <a href="{{ path('app_store_index') }}" class="btn btn-outline-secondary">
            &larr; Volver al listado
        </a>
    </div>

    {# 2. SECCIÓN DE ESTADÍSTICAS (NUEVO) #}
    <div class="row mb-4">
        {# Ingresos #}
        <div class="col-md-4">
            <div class="card text-white bg-success shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1" style="opacity: 0.9;">Ingresos Generados</h6>
                        <h2 class="mb-0 fw-bold">${{ stats.income|number_format(2) }}</h2>
                    </div>
                    <i class="fas fa-dollar-sign fa-3x" style="opacity: 0.4;"></i>
                </div>
            </div>
        </div>
        {# Alquileres #}
        <div class="col-md-4">
            <div class="card text-white bg-primary shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1" style="opacity: 0.8;">Total Alquileres</h6>
                        <h2 class="mb-0 fw-bold">{{ stats.total_rentals|number_format }}</h2>
                    </div>
                    <i class="fas fa-chart-line fa-3x" style="opacity: 0.4;"></i>
                </div>
            </div>
        </div>
        {# Inventario #}
        <div class="col-md-4">
            <div class="card text-dark bg-warning shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1 fw-bold" style="opacity: 0.7;">Inventario Disponible</h6>
                        <h2 class="mb-0 fw-bold">{{ stats.available_stock|number_format }}</h2>
                    </div>
                    <i class="fas fa-boxes fa-3x" style="opacity: 0.2;"></i>
                </div>
            </div>
        </div>
    </div>

    <hr>

    {# 3. SECCIÓN DE GESTIÓN (MANTENEMOS ESTO) #}
    <div class="row">
        
        {# COLUMNA IZQUIERDA: GERENTE Y STAFF #}
        <div class="col-md-5">
            {# Tarjeta del Gerente #}
            <div class="card border-primary mb-4">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-user-shield me-2"></i> Gerente de Tienda
                </div>
                <div class="card-body d-flex align-items-center">
                    <div class="bg-light rounded-circle p-3 me-3 text-primary">
                        <span class="fs-4 fw-bold">{{ store.manager.firstName|first }}{{ store.manager.lastName|first }}</span>
                    </div>
                    <div>
                        <h5 class="mb-0">{{ store.manager.firstName }} {{ store.manager.lastName }}</h5>
                        <small class="text-muted">{{ store.manager.email }}</small>
                    </div>
                </div>
            </div>

            {# Lista de Empleados #}
            <div class="card shadow-sm border-secondary">
                <div class="card-header bg-secondary text-white d-flex justify-content-between">
                    <span><i class="fas fa-users me-2"></i> Equipo de Trabajo</span>
                    <span class="badge bg-white text-dark">{{ staff_members|length }}</span>
                </div>
                <div class="list-group list-group-flush">
                    {% for staff in staff_members %}
                        <div class="list-group-item d-flex align-items-center">
                            <div class="me-3 text-secondary">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong>{{ staff.firstName }} {{ staff.lastName }}</strong>
                            </div>
                            {% if staff.active %}
                                <span class="badge bg-success">Activo</span>
                            {% else %}
                                <span class="badge bg-danger">Inactivo</span>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        {# COLUMNA DERECHA: CLIENTES #}
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0 text-primary"><i class="fas fa-address-book me-2"></i> Clientes Recientes</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th class="text-center">Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for customer in customers %}
                                <tr>
                                    <td>{{ customer.firstName }} {{ customer.lastName }}</td>
                                    <td>{{ customer.email }}</td>
                                    <td class="text-center">
                                        {% if customer.active %}
                                            <i class="fas fa-check-circle text-success" title="Activo"></i>
                                        {% else %}
                                            <i class="fas fa-times-circle text-danger" title="Inactivo"></i>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr><td colspan="3" class="text-center">No hay clientes.</td></tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="card mt-4">
    <div class="card-header bg-dark text-white py-2">
        <i class="bi bi-film"></i> Películas en esta tienda
    </div>

    <div class="card-body p-2">

        <table class="table table-sm table-hover mb-2" id="filmsTable">
            <thead class="table-light">
                <tr>
                    <th>Título</th>
                    <th class="text-center">Copias</th>
                </tr>
            </thead>
            <tbody>
                {% for film in films %}
                    <tr>
                        <td>{{ film.title }}</td>
                        <td class="text-center">{{ film.copias }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <!-- PAGINACIÓN -->
        <div class="d-flex justify-content-between align-items-center px-2 py-1 small text-muted">
    <span id="filmsInfo"></span>

    <nav>
        <ul class="pagination pagination-sm mb-0" id="filmsPagination"></ul>
    </nav>
</div>

    </div>
</div>
<script>
document.addEventListener("DOMContentLoaded", function () {

    const rowsPerPage = 20; // como la imagen buena
    const table = document.getElementById("filmsTable");
    const tbody = table.querySelector("tbody");
    const rows = Array.from(tbody.querySelectorAll("tr"));

    const pagination = document.getElementById("filmsPagination");
    const info = document.getElementById("filmsInfo");

    const totalRows = rows.length;
    const totalPages = Math.ceil(totalRows / rowsPerPage);
    let currentPage = 1;

    function renderTable(page) {
        currentPage = page;

        rows.forEach((row, index) => {
            row.style.display =
                index >= (page - 1) * rowsPerPage && index < page * rowsPerPage
                    ? ""
                    : "none";
        });

        const start = (page - 1) * rowsPerPage + 1;
        const end = Math.min(page * rowsPerPage, totalRows);

        info.textContent = `Página ${page} de ${totalPages} | Mostrando ${end - start + 1} de ${totalRows} películas`;
    }

    function renderPagination() {
        pagination.innerHTML = "";

        // ⬅ Prev
        pagination.appendChild(createPageItem("‹", currentPage - 1, currentPage === 1));

        // 1
        pagination.appendChild(createPageItem(1, 1, currentPage === 1));

        // …
        if (currentPage > 3) {
            pagination.appendChild(createEllipsis());
        }

        // Página actual (centro)
        for (let i = currentPage - 1; i <= currentPage + 1; i++) {
            if (i > 1 && i < totalPages) {
                pagination.appendChild(createPageItem(i, i, currentPage === i));
            }
        }

        // …
        if (currentPage < totalPages - 2) {
            pagination.appendChild(createEllipsis());
        }

        // Última
        if (totalPages > 1) {
            pagination.appendChild(createPageItem(totalPages, totalPages, currentPage === totalPages));
        }

        // Next ➡
        pagination.appendChild(createPageItem("›", currentPage + 1, currentPage === totalPages));
    }

    function createPageItem(text, page, disabled = false) {
        const li = document.createElement("li");
        li.className = "page-item" + (disabled ? " disabled" : "") + (currentPage === page ? " active" : "");

        const a = document.createElement("a");
        a.className = "page-link";
        a.href = "#";
        a.textContent = text;

        a.addEventListener("click", function (e) {
            e.preventDefault();
            if (!disabled && page >= 1 && page <= totalPages) {
                renderTable(page);
                renderPagination();
            }
        });

        li.appendChild(a);
        return li;
    }

    function createEllipsis() {
        const li = document.createElement("li");
        li.className = "page-item disabled";
        li.innerHTML = `<span class="page-link">…</span>`;
        return li;
    }

    if (totalRows > rowsPerPage) {
        renderTable(1);
        renderPagination();
    }
});
</script>

{% endblock %}