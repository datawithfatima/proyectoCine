{% extends 'base.html.twig' %}

{% block title %}Detalles del Pago{% endblock %}

{% block body %}
<div class="container mt-4">
    
    {# 1. BOTÓN VOLVER (Arriba a la izquierda como en tu foto) #}
    <div class="mb-3">
        <a href="{{ path('app_payment_index') }}" class="btn btn-outline-secondary">
            &larr; Volver al listado
        </a>
    </div>

    {# 2. TARJETA PRINCIPAL (Cabecera Azul) #}
    <div class="card border-primary mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Detalles del Pago</h5>
            <span class="badge bg-light text-primary fs-6">ID: {{ payment.paymentId }}</span>
        </div>
        
        <div class="card-body">
            <div class="row">
                {# Columna Izquierda: Información del CLIENTE #}
                <div class="col-md-8">
                    <h2 class="text-primary mb-3">
                        {{ payment.customer.firstName }} {{ payment.customer.lastName }}
                    </h2>
                    <p class="lead text-muted">
                        Cliente registrado en la tienda #{{ payment.customer.store.storeId }}
                    </p>
                    <p>
                        <strong>Email:</strong> {{ payment.customer.email ? payment.customer.email : 'Sin email' }}<br>
                        <strong>Estado:</strong> 
                        {% if payment.customer.active %}
                            <span class="badge bg-success">Activo</span>
                        {% else %}
                            <span class="badge bg-danger">Inactivo</span>
                        {% endif %}
                    </p>
                </div>

                {# Columna Derecha: Información FINANCIERA (Recuadro gris como en tu foto) #}
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-title text-muted border-bottom pb-2">Resumen de Transacción</h6>
                            
                            <div class="mb-2 mt-3">
                                <small class="text-muted d-block">Monto Pagado:</small>
                                <span class="fs-3 fw-bold text-success">${{ payment.amount }}</span>
                            </div>

                            <div class="mb-2">
                                <small class="text-muted d-block">Fecha de Pago:</small>
                                <span class="fw-bold">{{ payment.paymentDate|date('d/m/Y') }}</span>
                                <small>{{ payment.paymentDate|date('H:i A') }}</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# 3. SECCIÓN INFERIOR (Cajas Verde y Celeste) #}
    <div class="row">
        
        {# CAJA VERDE: Staff (Quien procesó) #}
        <div class="col-md-6 mb-4">
            <div class="card border-success h-100">
                <div class="card-header bg-success text-white">
                    <i class="fas fa-user-tie me-2"></i> Procesado por (Staff)
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            {# Avatar genérico #}
                            <div class="bg-light rounded-circle p-3 text-success">
                                <span class="fs-4">{{ payment.staff.firstName|first }}{{ payment.staff.lastName|first }}</span>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="mb-1">{{ payment.staff.firstName }} {{ payment.staff.lastName }}</h5>
                            <p class="mb-0 text-muted">Usuario: {{ payment.staff.username }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# CAJA CELESTE: Detalles de la Renta #}
        <div class="col-md-6 mb-4">
            <div class="card border-info h-100">
                <div class="card-header bg-info text-dark">
                    <i class="fas fa-film me-2"></i> Alquiler Asociado
                </div>
                <div class="card-body">
                    {% if payment.rental %}
                        <p class="card-text">Este pago corresponde al alquiler realizado el:</p>
                        <h5 class="text-primary">{{ payment.rental.rentalDate|date('d F, Y') }}</h5>
                        
                        <hr>
                        
                        {% if payment.rental.returnDate %}
                            <p class="mb-0 text-success">
                                <i class="fas fa-check-circle"></i> Devuelto el {{ payment.rental.returnDate|date('d/m/Y') }}
                            </p>
                        {% else %}
                            <p class="mb-0 text-danger">
                                <i class="fas fa-exclamation-triangle"></i> Pendiente de devolución
                            </p>
                        {% endif %}

                        {# NOTA: Para mostrar el título de la película, necesitaríamos vincular Rental -> Inventory -> Film.
                           Como aún no tenemos la entidad Inventory creada como Objeto, mostramos el ID #}
                        <div class="mt-3">
                            <small class="text-muted">ID Inventario: {{ payment.rental.inventory.id }}</small>
                        </div>

                    {% else %}
                        <div class="alert alert-warning mb-0">
                            No hay información de renta asociada a este pago directo.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}